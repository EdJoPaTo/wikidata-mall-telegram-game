{
	"name": "wikidata-mall-telegram-game",
	"private": true,
	"version": "0.0.0",
	"description": "A Telegram Game where you can build your own mall based on Wikidata entities",
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-mall-telegram-game",
	"author": {
		"name": "EdJoPaTo",
		"email": "edjopato@gmail.com",
		"url": "edjopato.de"
	},
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"start": "ts-node source/index.ts",
		"test": "xo && nyc ava"
	},
	"main": "dist",
	"types": "dist",
	"files": [
		"dist",
		"!*.test.*"
	],
	"keywords": [
		""
	],
	"dependencies": {
		"@sindresorhus/tsconfig": "^0.4.0",
		"array-filter-unique": "^2.1.0",
		"gaussian": "^1.1.0",
		"json-stable-stringify": "^1.0.1",
		"locale-emoji": "^0.3.0",
		"random-item": "^3.0.0",
		"telegraf": "^3.30.1",
		"telegraf-i18n": "^6.5.0",
		"telegraf-inline-menu": "^3.6.0",
		"telegraf-session-local": "0.0.7",
		"telegraf-wikibase": "^0.1.0",
		"ts-node": "^8.0.2",
		"typescript": "^3.3.3",
		"wikidata-entity-reader": "^1.3.0",
		"wikidata-entity-store": "^1.1.0",
		"wikidata-sdk-got": "^1.1.1"
	},
	"devDependencies": {
		"@types/gaussian": "^1.1.1",
		"@types/json-stable-stringify": "^1.0.32",
		"@types/node": "^12.0.2",
		"@typescript-eslint/eslint-plugin": "^1.10.2",
		"@typescript-eslint/parser": "^1.10.2",
		"ava": "^2.1.0",
		"del-cli": "^2.0.0",
		"eslint-config-xo-typescript": "^0.15.0",
		"nyc": "^14.1.1",
		"xo": "^0.24.0"
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "source"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text"
    ]
  },
	"xo": {
		"semi": false,
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"rules": {
			"ava/no-ignored-test-files": "off",
			"@typescript-eslint/array-type": "warn",
			"@typescript-eslint/semi": [
				"error",
				"never"
			]
		}
	}
}
